<launch>

	<!-- Agregar camera_info -->
	<node pkg="opt_utils" type="add_camera_info" name="add_camera_info">
	</node>

	
	<!-- Convertir imagen depth a point cloud -->
	<node pkg="nodelet" type="nodelet" name="depth_to_pc" args="standalone depth_image_proc/point_cloud_xyz">
	<remap from="camera_info" to="camera/rgb/camera_info" />
	<remap from="image_rect" to="camera/depth/image" />
	<remap from="points" to="camera/depth/points" />
	</node>

	
	<!-- Generar un mundo -->
	<arg name="args1" default="0 0 0 0 0 0 /world /camera_depth_optical_frame 100" />
	<node pkg="tf" type="static_transform_publisher" name="static_world" args="$(arg args1)">
	</node>

	
	<!-- Lanzar rosbag -->
	<param name="use_sim_time" value="true" />
	<arg name="args2" default="--clock -l" />
	<arg name="bagfile" default="/home/edu/bagfiles/persona_hormi.bag" />
	<node pkg="rosbag" type="play" name="bag_persona_hormi" args="$(arg args2) $(arg bagfile)" output="screen">
	<remap from="camera/depth/camera_info" to="camera/rgb/camera_info" />
	<remap from="camera/rgb/image_raw" to="camera/rgb/image_color" />
	</node>


	<!-- Visualizar en rViz -->
	<!--<node pkg="rviz" type="rviz" name="rviz_visual">-->





